{
  "manifest_version": 3,
  "name": "Rephraser AI",
  "version": "1.3.1",
  "description": "Rephrase text by using AI.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab", 
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "rephraser_16.png",
    "48": "rephraser_48.png",
    "128": "rephraser_128.png"
  }
}